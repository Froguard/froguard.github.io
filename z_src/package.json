{
  "name": "hexo-site",
  "version": "1.0.0",
  "private": true,
  "hexo": {
    "version": "3.7.1"
  },
  "scripts": {
    "new": "hexo new ",
    "--------------------0-----------------------------": "----------------------------------------------------------",
    "_hexoClean": "hexo clean",
    "_hexoGen": "hexo g",
    "_hexoServer": "hexo s --l -p 9527",
    "_hexoDeploy": "hexo d",
    "_openChrome": "opn 'http://localhost:9527' -- 'google chrome'",
    "--------------------1-----------------------------": "----------------------------------------------------------",
    "_delPubCache": "gulp cleanDeployCache",
    "--------------------2-----------------------------": "----------------------------------------------------------",
    "_genTheme": "cd themes/yilia && npm run pub",
    "_copyMyDiyRes": "gulp copyMyRes2ThemeDir",
    "--------------------本地开发------------------------": "----------------------------------------------------------",
    "genThemeWatch": "cd themes/yilia && npm run pack",
    "copyResWatch": "gulp zResCopyGaze",
    "watch": "run-p genThemeWatch copyResWatch",
    "dev": "run-s _hexoGen _openChrome _hexoServer",
    "--------------------部署到线上----------------------": "----------------------------------------------------------",
    "push": "run-s _copyMyDiyRes _genTheme _hexoGen _hexoDeploy",
    "sync": "run-s _delPubCache _hexoClean push"
  },
  "dependencies": {
    "colors": "^1.1.2",
    "del": "^2.2.2",
    "gaze": "^1.1.2",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-clean-css": "^2.0.13",
    "gulp-sequence": "^0.4.6",
    "gulp-uglify": "^2.0.0",
    "hexo": "^3.2.2",
    "hexo-cli": "^1.0.2",
    "hexo-deployer-git": "^0.2.0",
    "hexo-generator-archive": "^0.1.4",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-feed": "^1.2.0",
    "hexo-generator-index": "^0.2.0",
    "hexo-generator-tag": "^0.2.0",
    "hexo-renderer-ejs": "^0.2.0",
    "hexo-renderer-marked": "^0.2.10",
    "hexo-renderer-stylus": "^0.3.1",
    "hexo-server": "^0.2.0",
    "json-toy": "^1.0.6",
    "moment": "^2.14.1",
    "nib": "^1.1.0",
    "node-notifier": "^4.6.0",
    "npm-run-all": "^2.3.0",
    "read-yaml": "^1.0.0",
    "stylus": "^0.54.5"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-kaola": "^0.1.3",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-promise": "^4.0.0",
    "opn-cli": "^3.1.0"
  }
}
